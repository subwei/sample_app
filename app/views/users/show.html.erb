<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
      	<%# renders each micropost with the _micropost partial by convention %>
        <%= render @microposts %>
      </ol>
      <%# Need @microposts since we don't want to paginate @users %>
      <%= will_paginate @microposts %>
    <% end %>
  </div>  
</div>